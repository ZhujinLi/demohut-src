extends layout

block content
  #accordion
    div
      #heading-2021
        .mb-0.text-center
          button.btn.btn-link.collapsed(data-toggle='collapse' data-target='#collapse-2021' aria-expanded='true' aria-controls='collapse-2021')
            a.display-4.text-dark 2021
      #collapse-2021.collapse.show(aria-labelledby='heading-2021' data-parent='#accordion')
        .card-body
          div.text-center
            ul#subj-list.nav.nav-list.flex-column
              each subj in subjs_2021
                li.nav-item
                  a.nav-link.pl-0.pr-0(href='/demohut/subjs/'+subj.name+'/'+subj.name+'.html')= subj.title

