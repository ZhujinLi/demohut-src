doctype html
html
  head
    title= head_title
    link(rel="stylesheet", href="/main.css")
  body
    div#jumbotron.jumbotron.jumbotron-fluid.text-monospace
      div.container
        h1
          a(href="/") DemoHut

    div.container
      if backLink
        form(action= backLink).text-right
          button.btn.btn-outline-primary(type='submit') ← all posts

      .display-4
        p= subj_title

      div#content
        block content

      if srcLink
        a.text-right(href= srcLink, target='_blank')
          p → view src

      .hr-theme-slash-2
        .hr-line.l
        .hr-icon
          a(href='https://github.com/ZhujinLi')
            img#img-github(src='/github.png', height='32px')
        .hr-icon
          a(href='https://codepen.io/zjli')
            img#img-github(src='/codepen.png', height='32px')
        .hr-icon
          a(href='https://www.shadertoy.com/user/zjli')
            img#img-github(src='/shadertoy.png', height='32px')
        .hr-line.r

    script(src="/main.js", type="module")
