doctype html
html
  head
    title= head_title
    link(rel='stylesheet', href='/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/public/common/style.css')
  body
    div#jumbotron.jumbotron.jumbotron-fluid.text-monospace
      div.container
        h1
          a(href="/") a coder's view

    div.container
      if backLink
        form(action= backLink).text-right
          button.btn.btn-outline-primary(type='submit') ← all posts

      .display-4
        p= subj_title

      block content

      if srcLink
        a.text-right(href= srcLink, target='_blank')
          p → view src

      .hr-theme-slash-2
        .hr-line.l
        .hr-icon
          a(href='https://github.com/ZhujinLi')
            img(src='/public/common/github.png' height='32px')
        .hr-line.r
